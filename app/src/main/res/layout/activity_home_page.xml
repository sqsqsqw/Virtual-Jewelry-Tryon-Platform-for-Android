        </LinearLayout>

    </ScrollView>

    <!--底部内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bottomBar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:src="@drawable/home_on_press"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/bottomBarButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bar_home"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/homeToShop"
                android:src="@drawable/shop_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/bottomBarButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bar_shop"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/homeToMessage"
                android:src="@drawable/message_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/bottomBarButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bar_distribute"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/homeToSelf"
                android:src="@drawable/self_normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/bottomBarButton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bar_self"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>