<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor">

    <!--头-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/themeColor">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:layout_weight="4"
            android:paddingLeft="10dp"
            android:drawablePadding="6dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_username">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="点击搜索"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

    <!--主体-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="10"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:descendantFocusability="beforeDescendants">
            <!--轮播图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <com.youth.banner.Banner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/homePageSlide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:image_scale_type="center_crop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--商品-->
                <com.Hashqi.try_on_client.Component.MyListView
                    android:id="@+id/home_goods_left_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:listSelector="@color/bgcolor">

                </com.Hashqi.try_on_client.Component.MyListView>
                <!--商品-->
                <com.Hashqi.try_on_client.Component.MyListView
                    android:id="@+id/home_goods_right_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:listSelector="@color/bgcolor">

                </com.Hashqi.try_on_client.Component.MyListView>
            </LinearLayout>
            <!--一行商品
