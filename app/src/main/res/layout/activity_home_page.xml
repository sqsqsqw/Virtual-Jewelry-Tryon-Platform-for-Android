                        android:src="@drawable/g_002"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_002" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/GoodLinearLayoutL">
                    <com.Hashqi.try_on_client.Component.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_003"/>

                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_003" />
                </LinearLayout>
                <LinearLayout
                    style="@style/GoodLinearLayoutR">
                    <com.Hashqi.try_on_client.Component.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
