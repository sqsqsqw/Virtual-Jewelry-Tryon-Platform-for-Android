<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            android:src="@drawable/goods_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ccc" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/head_pic"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <EditText
            android:id="@+id/regUser"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_user"
            android:maxLines="1"
            android:hint="用户名"
            android:drawablePadding="6dp"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/bg_username"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/regPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_password"
            android:maxLines="1"
            android:hint="密码"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/bg_username"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/regPasswordAgain"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_password"
            android:maxLines="1"
            android:hint="再次输入密码"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/bg_username"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/reg_btn_reg"
            android:background="@drawable/bg_cinema_btn"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>